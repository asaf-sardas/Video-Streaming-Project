<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content Management - Netflix Admin</title>
    <link rel="icon" type="image/x-icon" href="/Images/nficon2023.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body class="admin-page-body">
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div style="display: flex; align-items: center; width: 100%">
        <div class="netflix-text">NETFLIX ADMIN</div>
        <div class="secondary-navigation">
          <a href="/feed" class="nav-link">Back to Feed</a>
          <div class="profile-menu">
            <% if (user) { %>
            <span class="profile-welcome"
              >Welcome, <%= user.username || user.email %></span
            >
            <% } %>
            <div class="profile-avatar">
              <div class="profile-image smiley-avatar"></div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="admin-container">
      <!-- Content Type Selector -->
      <div class="content-type-selector">
        <button
          type="button"
          id="contentTypeSeries"
          class="content-type-btn active"
        >
          <i class="bi bi-film"></i> Add Series/Movie
        </button>
        <button type="button" id="contentTypeEpisode" class="content-type-btn">
          <i class="bi bi-play-circle"></i> Add Episode
        </button>
      </div>

      <!-- Create Content Section -->
      <div id="createTab" class="tab-content active">
        <h2 class="section-title" id="sectionTitle">Create New Content</h2>
        <form id="createContentForm" class="content-form">
          <!-- Content Form Sections (for Series/Movie) -->
          <div id="contentFormSections">
            <!-- Basic Information -->
            <div class="form-section">
              <h3 class="form-section-title">Basic Information</h3>

              <div class="form-group">
                <label for="create_title">Title *</label>
                <input
                  type="text"
                  id="create_title"
                  name="title"
                  required
                  class="form-control"
                />
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="create_type">Type *</label>
                  <select
                    id="create_type"
                    name="type"
                    required
                    class="form-control"
                  >
                    <option value="movie">Movie</option>
                    <option value="series">Series</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="create_releaseYear">Release Year *</label>
                  <input
                    type="number"
                    id="create_releaseYear"
                    name="releaseYear"
                    required
                    class="form-control"
                    min="1900"
                    max="2100"
                  />
                </div>

                <div class="form-group" id="create_durationGroup">
                  <label for="create_duration">Duration (minutes)</label>
                  <input
                    type="number"
                    id="create_duration"
                    name="duration"
                    class="form-control"
                    min="1"
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="create_description">Description *</label>
                <textarea
                  id="create_description"
                  name="description"
                  required
                  class="form-control"
                  rows="4"
                ></textarea>
              </div>

              <div class="form-group">
                <label for="create_genres">Genres *</label>
                <div id="create_genres" class="genres-checkbox-container">
                  <% if (typeof genres !== 'undefined' && genres.length > 0) {
                  %> <% genres.filter(g => g.isActive).forEach(genre => { %>
                  <label class="genre-checkbox-label">
                    <input
                      type="checkbox"
                      name="genres"
                      value="<%= genre._id %>"
                      class="genre-checkbox"
                    />
                    <span class="genre-checkbox-text"><%= genre.name %></span>
                  </label>
                  <% }); %> <% } %>
                </div>
              </div>
            </div>

            <!-- Media URLs -->
            <div class="form-section">
              <h3 class="form-section-title">Media Links</h3>

              <div class="form-group">
                <label for="create_imageUrl">Image URL*</label>
                <input
                  type="string"
                  id="create_imageUrl"
                  name="imageUrl"
                  class="form-control"
                  placeholder="https://example.com/image.jpg"
                  required
                />
              </div>

              <div class="form-group" id="create_videoUrlGroup">
                <label for="create_videoUrl">Video URL*</label>
                <input
                  type="string"
                  id="create_videoUrl"
                  name="videoUrl"
                  class="form-control"
                  placeholder="https://example.com/video.mp4"
                  
                />
              </div>
            </div>

            <!-- Cast & Crew -->
            <div class="form-section">
              <h3 class="form-section-title">Cast & Crew</h3>

              <div class="form-group">
                <label for="create_director">Director</label>
                <input
                  type="text"
                  id="create_director"
                  name="director"
                  class="form-control"
                />
              </div>

              <div class="form-group">
                <label>Cast Members (0-10)</label>
                <div id="create_castContainer" class="cast-container">
                  <!-- Cast members will be added dynamically -->
                </div>
                <button
                  type="button"
                  id="create_addCastBtn"
                  class="btn-secondary"
                >
                  <i class="bi bi-plus"></i> Add Cast Member
                </button>
              </div>

              <div class="form-group">
                <label for="create_producers"
                  >Producers (comma-separated)</label
                >
                <input
                  type="text"
                  id="create_producers"
                  name="producers"
                  class="form-control"
                  placeholder="Producer 1, Producer 2"
                />
              </div>
            </div>
          </div>
          <!-- End Content Form Sections -->

          <!-- Episode Form Fields (Hidden by default) -->
          <div
            id="episodeFormSection"
            class="form-section"
            style="display: none"
          >
            <h3 class="form-section-title">Episode Information</h3>

            <div class="form-group">
              <label for="episode_series">Parent Series *</label>
              <select
                id="episode_series"
                name="content"
                required
                class="form-control"
              >
                <option value="">Select a series...</option>
                <!-- Series will be populated dynamically -->
              </select>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="episode_seasonNumber">Season Number *</label>
                <input
                  type="number"
                  id="episode_seasonNumber"
                  name="seasonNumber"
                  required
                  class="form-control"
                  min="1"
                />
              </div>

              <div class="form-group">
                <label for="episode_episodeNumber">Episode Number *</label>
                <input
                  type="number"
                  id="episode_episodeNumber"
                  name="episodeNumber"
                  required
                  class="form-control"
                  min="1"
                />
              </div>

              <div class="form-group">
                <label for="episode_duration">Duration (minutes) *</label>
                <input
                  type="number"
                  id="episode_duration"
                  name="duration"
                  required
                  class="form-control"
                  min="1"
                />
              </div>
            </div>

            <div class="form-group">
              <label for="episode_title">Episode Title *</label>
              <input
                type="text"
                id="episode_title"
                name="title"
                required
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="episode_description">Description *</label>
              <textarea
                id="episode_description"
                name="description"
                required
                class="form-control"
                rows="4"
              ></textarea>
            </div>

            <div class="form-group">
              <label for="episode_releaseDate">Release Date</label>
              <input
                type="date"
                id="episode_releaseDate"
                name="releaseDate"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="episode_imageUrl">Image URL*</label>
              <input
                type="string"
                id="episode_imageUrl"
                name="imageUrl"
                class="form-control"
                placeholder="https://example.com/image.jpg"
                required
              />
            </div>

            <div class="form-group">
              <label for="episode_videoUrl">Video URL *</label>
              <input
                type="string"
                id="episode_videoUrl"
                name="videoUrl"
                required
                class="form-control"
                placeholder="https://example.com/video.mp4"
              />
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-primary" id="submitBtn">
              <i class="bi bi-check-lg"></i>
              <span id="submitBtnText">Create Content</span>
            </button>
            <button type="reset" class="btn-secondary">
              <i class="bi bi-arrow-counterclockwise"></i> Reset Form
            </button>
          </div>
        </form>
        <div id="createMessage" class="message"></div>
      </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="modal">
      <div class="modal-content">
        <div class="modal-icon success-icon">
          <i class="bi bi-check-circle-fill"></i>
        </div>
        <h3>The content was uploaded successfully!</h3>
        <p id="successMessage">
          The movie/series has been successfully added to the system.
        </p>
        <div class="modal-actions">
          <button id="closeSuccessModal" class="btn-primary">
            <i class="bi bi-check-lg"></i> Approve
          </button>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin-content.js"></script>
  </body>
</html>
