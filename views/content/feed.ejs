<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Netflix</title>
    <link rel="icon" type="image/x-icon" href="/Images/nficon2023.ico" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/header', { showCategories: true, showSearch: true }) %>

    <!-- Main content area -->
    <div class="container-fluid main-content">
      <!-- TV Shows Container -->
      <div class="category-container" id="tvshows" style="display: none">
        <h2 class="category-title">TV Shows</h2>
        <div class="content-grid" id="tvShowsGrid"></div>
      </div>

      <!-- Movies Container -->
      <div class="category-container" id="movies" style="display: none">
        <h2 class="category-title">Movies</h2>
        <div class="content-grid" id="moviesGrid"></div>
      </div>

      <!-- My List Container -->
      <div class="category-container" id="mylist" style="display: none">
        <h2 class="category-title">My List</h2>
        <div class="content-grid" id="myListGrid"></div>
      </div>

      <!-- Home Container -->
      <div class="category-container" id="home">
        <!-- Continue Watching Section -->
        <section class="content-section">
          <h2 class="section-title">Continue Watching</h2>
          <div class="horizontal-scroll" id="continueWatchingSection">
            <div class="content-row" id="continueWatchingRow"></div>
          </div>
        </section>

        <!-- Recommended for You Section -->
        <section class="content-section">
          <h2 class="section-title">Recommended for You</h2>
          <div class="horizontal-scroll" id="recommendedSection">
            <div class="content-row" id="recommendedRow"></div>
          </div>
        </section>

        <!-- Popular Now Section -->
        <section class="content-section">
          <h2 class="section-title">Popular Now</h2>
          <div class="horizontal-scroll" id="popularSection">
            <div class="content-row" id="popularRow"></div>
          </div>
        </section>

        <!-- New Releases Section -->
        <section class="content-section">
          <h2 class="section-title">New Releases</h2>
          <div class="horizontal-scroll" id="newReleasesSection">
            <div class="content-row" id="newReleasesRow"></div>
          </div>
        </section>

        <!-- Genre Sections will be added dynamically -->
        <div id="genreSections"></div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/viewingActions.js"></script>
    <script src="/js/feed.js"></script>
  </body>
</html>
