<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Netflix - Content Details</title>
    <link rel="icon" type="image/x-icon" href="/Images/nficon2023.ico" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container-fluid px-0">
        <a class="navbar-brand" href="/feed">
          <div class="netflix-text">NETFLIX</div>
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/feed">Back to Browse</a>
            </li>
          </ul>

          <div class="profile-menu">
            <div class="profile-avatar" id="menuProfileAvatar">
              <img id="menuProfileImage" alt="Profile" class="profile-image" />
            </div>

            <div class="profile-welcome">
              Welcome, <span id="profileName"></span>
            </div>
            <span class="dropdown-icon">
              <i class="bi bi-chevron-down"></i>
            </span>
            <div class="dropdown-menu" id="profileDropdown">
              <div class="dropdown-item">
                <i class="bi bi-person-fill"></i> Profile
              </div>
              <div class="dropdown-item">
                <i class="bi bi-people-fill"></i> Switch Profile
              </div>
              <div class="dropdown-item">
                <i class="bi bi-box-arrow-right"></i> Logout
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container-fluid main-content">
      <div id="contentDetailContainer">
        <!-- Content will be loaded here dynamically -->
        <div class="loading">Loading content details...</div>
      </div>
      
      <!-- Episodes section for series -->
      <div id="episodesContainer" style="display: none;">
        <h2>Episodes</h2>
        <div class="seasons-tabs">
          <!-- Season tabs will be added here -->
        </div>
        <div class="episodes-list">
          <!-- Episodes will be added here -->
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/content-detail.js"></script>
  </body>
</html>
